{
  "name": "linear-watchtower",
  "version": "1.0.0",
  "private": true,
  "description": "Your utility helper to enhance the Linear+Github workflow",
  "author": "8BitJonny",
  "license": "ISC",
  "homepage": "https://github.com//",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "probot run ./lib/index.js",
    "test": "jest"
  },
  "dependencies": {
    "@octokit/types": "^8.0.0",
    "neverthrow": "^5.0.1",
    "probot": "^12.2.4"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "jest": "^29.0.0",
    "nock": "^13.0.5",
    "smee-client": "^1.2.2",
    "ts-jest": "^29.0.0",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run build && npm start",
    "ext": "ts"
  }
}
